<%= render 'shared/about_us_submenu' %>

<div id="breadcrumbs">
  <div class="wrapper">
    <%= link_to "О Студии", about_us_path %>
    <span class="drop"></span>
    <%= link_to "Персоналии", persons_path %>
    <span class="drop"></span>
    <a href="" class="head_name"></a>
  </div>
</div>

<div id="center" class="bg-about">
  <div class="wrapper">

    <div class="content-column fl radius-10">
      <div class="content-header top-radius-10">Сотрудники</div>
      <div class="content-block">
	<div class="person-list">
	  <ul>
	    <% @staffs.each do |staff| %>
	      <li><%= link_to staff.title, "", :class => "person", "data-person-id" => staff.id %></li>
	    <% end %>
	  </ul>
	</div>
      </div>
    </div>

    <div class="content-column fr radius-10">
      <div class="content-header top-radius-10">Информация</div>
      <% @staffs.each do |staff| %>
	<div class="person_block hidden" id="person_<%= staff.id %>">
	  <div class="content-block">
	    <div class="person-info">
	      <div class="thumb"><%= image_tag staff.photo %></div>
	      <div class="name"><%= staff.title %></div>
	      <div class="type"><%= staff.job %></div>
	      <div class="resume">
		<%== staff.biography  %>
	      </div>
	    </div>
	  </div>
	  <div class="content-footer bottom-radius-10">
	    <% %w[lj vk tw].each do |soc| %>
	      <%= link_to staff.send("#{soc}_url".to_sym) do %>
		<%= image_tag "icon-#{soc}.png" %>
	      <% end if staff.send("#{soc}_url".to_sym) %>
	    <% end %>
	  </div>
	</div>
      <% end %>
    </div>

    <div class="clear"></div>
  </div>
</div>
